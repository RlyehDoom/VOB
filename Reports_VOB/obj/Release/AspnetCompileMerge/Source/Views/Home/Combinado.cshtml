@model VOB.Web.Models.ReporteNormalModel
@{
    ViewBag.Title = "Banco Internacional - Reporte Financiero Combinado";
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            kendo.culture("es-CL");

        });

        function BuscarDatosCliente() {
            if ($('#Rut').val() != "") {
                $('#contenedorSelPer').show("slow", function () {
                    CargarPeriodos();
                });
            }
            else {
                $('#alertaRUT').show();
            }
        }
        function CargarPeriodos() {
            var grid = $("#grid").kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: '@Url.Action("ObtieneBalancesCliente", "Home")',
                            dataType: "json",
                            data : { rutCliente: $('#Rut').val(), tipoBalance: 1 }
                        }
                    },
                    schema: {
                        model: { id: "IdPeriodo" }
                    }
                },
                dataBinding: function (e) {
                    kendo.ui.progress($('#grid'), true);
                },
                dataBound: function(e) {
                    kendo.ui.progress($('#grid'), false);
                },
                noRecords: {
                    template: "No existen Balances Individuales en estado Terminado..."
                },
                groupable: false,
                sortable: true,
                pageable: false,
                columns: [{ title:"",template: "<input type='checkbox' class='gridCheckbox' />", width:100 }
                , {
                    field: "IdPeriodo",
                    title: "Id",
                    width: 50
                }, {
                    field: "Periodo",
                    title: "Periodo"
                }, {
                    field: "Meses",
                    title: "Meses",
                    width: 80
                },
                {
                    field: "Estado",
                    title: "Estado"
                }, {
                    field: "Calidad",
                    title: "Calidad"
                }, {
                    field: "Moneda",
                    title: "Moneda"
                }]
            }).data("kendoGrid");
            grid.table.on("click", ".gridCheckbox", selectRow);
        }
        var checkedIds = {};
        //on click of the checkbox:
        function selectRow() {
            var checked = this.checked,
            row = $(this).closest("tr"),
            grid = $("#grid").data("kendoGrid"),
            dataItem = grid.dataItem(row);

            checkedIds[dataItem.id] = checked;
            if (checked) {
                //-select the row
                row.addClass("k-state-selected");
            } else {
                //-remove selection
                row.removeClass("k-state-selected");
            }
        }
        //on dataBound event restore previous selected rows:
        function onDataBound(e) {
            var view = this.dataSource.view();
            for (var i = 0; i < view.length; i++) {
                if (checkedIds[view[i].id]) {
                    this.tbody.find("tr[data-uid='" + view[i].uid + "']")
                    .addClass("k-state-selected")
                    .find(".checkbox")
                    .attr("checked", "checked");
                }
            }
        }
    </script>
}

@using (Html.BeginForm(null, null, new { }, FormMethod.Post, new { @class = "", @target = "reportFrame" }))
{
    <div id="alertaRUT" class="alert alert-warning" style="display:none;">
        <a href="#" class="close" onclick="$('.alert').hide()">&times;</a>
        <strong>Advertencia!</strong> Por favor ingrese un RUT valido.
    </div>
    <br />
    <div id="controlesBusqueda">
        <div class="row">
            <div class="col-sm-6">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    @Html.TextBoxFor(m => m.Rut, new { @class = "form-control medium-size", @placeholder = Html.DisplayNameFor(m => m.Rut) })
                    <span class="input-group-btn pull-left">
                        <button type="button" class="btn btn-default" onclick="BuscarDatosCliente()">Buscar</button>
                    </span>
                </div>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
        <div id="contenedorSelPer" class="row" style="display:none;">
            <div class="col-sm-12">
                <br />
                <div id="grid"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <br />
                <input type="submit" class="btn btn-primary pull-right" value="Generar Reporte" />
            </div>
        </div>
        <br />
    </div>
    <iframe id="reportFrame" src="~/Reportes/ReportViewer.aspx" style="width:100%; height:300px;"></iframe>
}     